<div class="forum-item" id=newPostForm>
  <h2 class="author-label">Author:</h2>
  <input class="author-input" type="text">
  <h2 class="subject-label">Subject:</h2>
  <input class="subject-input" type="text">
  <textarea class="post-input"></textarea>
  {{#if threadPost}}
    <button class="post-button button" id="threadPostButton" type="button">Post Thread</button>
  {{/if}}
  {{#if commentPost}}
    <button class="post-button button" id="commentPostButton" type="button">Post Reply</button>
  {{/if}}
  <button class="cancel-button button" type="button">Cancel</button>
</div>
