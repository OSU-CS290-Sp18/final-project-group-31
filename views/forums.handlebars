  <script src="/newPostTemplate.js"></script>

  {{>header}}

  <main class="forum-holder">
    <h1 class="forum-label">Forums</h1>
  {{#if forumCatagories}}
      <div class="forum-item-holder">
        <a href="/forums/General-Discussion" class="forum-item">
          <img class="catagory-picture" src="/img/stickfiguretitle.png">
          <h2 class="catagory-title">General Discussion</h2>
          <h3 class="catagory-description">A place to talk about whatever (Within reason!).</h3>
        </a>

        <a href="/forums/Stick-Figure-Clicker" class="forum-item">
          <img class="catagory-picture" src="/img/stickfiguretitle.png">
          <h2 class="catagory-title">Stick Figure Clicker!</h2>
          <h3 class="catagory-description">Discussion about the Stick Figure Clicker! game.</h3>
        </a>
      </div>
  {{/if}}

  {{#if forumThreads}}
    <h1 class="catagory-label">Stick Figure Clicker! threads</h1>
