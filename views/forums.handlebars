        <h3 class="thread-views">5 views</h3>
      </a>

      <a href="/forums/Stick-Figure-Clicker/925-this-is-also-a-thread" class="forum-item">
        <h2 class="thread-subject">This is also a thread</h2>
        <h3 class="thread-author">By Some Person</h3>
        <h3 class="thread-comments">0 comments</h3>
        <h3 class="thread-views">1 views</h3>
      </a>
    </div>
    <script src="/newPost.js"></script>
  {{/if}}

  {{#if individualThread}}
    <a href="/forums/Stick-Figure-Clicker"><h1 class="catagory-label">Stick Figure Clicker! threads</h1></a>
    <div class="forum-item-holder">
      <div class="forum-item" id="threadPost">
        <h2 class="thread-subject">This is also a thread</h2>
        <h3 class="thread-author">By Some Person</h3>
        <h3 class="thread-comments">0 comments</h3>
        <h3 class="thread-views">1 views</h3>
